<div class="add-container">
    <h2 class="add-h2">Edit Student</h2>
    <form class="add-form" {{on "submit" this.saveChanges}}>
        <div class="add-form-1 add-form-div">
            <label for="name">Name:</label>
            <input value={{this.editStudent.name}} {{on 'input' (fn this.updateStudent 'name')}} type="text" placeholder="Enter your name" id="name" required/>
        </div>
        <div class="add-form-2 add-form-div">
            <label for="rollno">Roll No:</label>
            <input type="text" value={{this.editStudent.rollno}} {{on 'input' (fn this.updateStudent 'rollno')}} placeholder="Enter your roll no" id="rollno" required/>
        </div>
        <div class="add-form-3 add-form-div">
            <label for="dept">Department:</label>
            <PowerSelect
                @searchEnabled={{true}}
                @options={{this.departments}} 
                @selected={{this.editStudent.dept}} 
                @onChange={{this.updateDepartment}}
                @allowClear={{true}}
                @placeholder="Select Department"
                as |dept|
            >
                {{dept}}
            </PowerSelect>
        </div>
        <div class="add-form-4 add-form-div">
            <label for="dob">DOB:</label>
            <input type="date" value={{this.editStudent.dob}} {{on 'input' (fn this.updateStudent 'dob')}} placeholder="DOB" id="dob" required/>
        </div>
        <div class="add-form-3">
            <label for="interest" class="interest">Interests:</label>
            <PowerSelectMultiple
                @options={{this.Interests}}
                @onChange={{this.updateInterest}}
                @selected={{this.editStudent.interests}}
                @allowClear={{true}}
                @searchEnabled={{true}}
                as |interest|
            >
                {{interest}}
            </PowerSelectMultiple>
            
        </div>
        <div class="add-form-5 add-form-div">
            <label for="city">
                City:
            </label>
            <input type="text" value={{this.editStudent.address}} {{on 'input' (fn this.updateStudent 'address')}} placeholder="Enter your city" id="city" required/>
        </div>
        <div class="add-form-3 add-form-div">
            <label>
                Grade
            </label>
            <PowerSelect
                @options={{this.grades}}
                @selected={{this.editStudent.result.grade}}
                @onChange={{this.updateGrade}}
                @placeholder="Select Grade"
                @allowClear={{true}}
                as |grade|
            >
                {{grade}}
            </PowerSelect>
        </div>
        <div class="add-form-6 add-form-div"> 
            <label for="cgpa">
                CGPA:
            </label>
            <input type="text" placeholder="Enter your CGPA" {{on "input" (fn this.updateResult "CGPA")}} value={{this.editStudent.result.CGPA}} id="cgpa"/>
        </div>
        <div class="add-form-6 add-form-div"> 
            <label for="attendance">
                Attendence%:
            </label>
            <input type="text" placeholder="Enter your Attendence%" {{on "input" (fn this.updateResult "attendance")}} value={{this.editStudent.result.attendance}} id="attendence"/>
        </div>
        <div class="add-form-6 add-form-div"> 
            <label for="backlogs">
                Backlogs:
            </label>
            <input type="text" placeholder="Enter your Backlogs" {{on "input" (fn this.updateResult "backlogs")}} value={{this.editStudent.result.backlogs}} id="backlogs"/>
        </div>
        <div class="add-form-btn">
            <button type="submit" {{on-key "Enter"}}>Edit Student</button>
            <button type="button" {{on "click" this.student}} {{on-key 'Escape'}}>Cancel</button>
        </div>
    </form>
</div>